{
     // Hover to view descriptions of existing attributes.
  
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/react-app/build"
        },
        {
            "name": "Debug React Tests",
            "type": "node",
            "request": "launch",
            //"port":9229,
            "runtimeExecutable": "${workspaceRoot}/react-app/node_modules/.bin/react-scripts",
            "runtimeArgs": [
              "--inspect-brk",
              "test"
            ],
            "args": [
              "--runInBand",
              "--no-cache",
              "--env=jsdom"
            ],
            "cwd": "${workspaceRoot}/react-app",
            //"protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "meteor://ðŸ’»app/*": "${workspaceFolder}/*",
                "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
                "webpack://?:*/*": "${workspaceFolder}/*",
                "webpack:///./src/*": "${workspaceFolder}/*",
            }
        },
        {
            "name": "Debug TypeScript CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/cli/src/main.ts",
            "args": ["--saveFile",
                     "save.json", 
                     "../examples/CloakOfDarkness/build/webapp/stdlib.yaml",
                     "../examples/CloakOfDarkness/build/webapp/properties.yaml",
                     "../examples/CloakOfDarkness/build/webapp/adventure.yaml"
            ],
            "runtimeArgs": ["--import", "tsx"],
            "cwd": "${workspaceFolder}/cli", 
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
        },
        {
            "name": "Run CLI (Compiled)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/cli/out/src/main.js",
            "args": [
                "--saveFile",
                "save.json", 
                "../examples/CloakOfDarkness/build/webapp/stdlib.yaml",
                "../examples/CloakOfDarkness/build/webapp/properties.yaml",
                "../examples/CloakOfDarkness/build/webapp/adventure.yaml"
            ],
            "cwd": "${workspaceFolder}/cli",
            "env": {
                "NODE_ENV": "production"
            },
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - cli/tsconfig.json"
        }
    ]
}
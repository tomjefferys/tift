{
    "compilerOptions": {
          "target": "ES2015",
          "module": "commonjs",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "sourceMap": true,
          "outDir": "./out"
    },
    "types": ["moo"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}

{
    "compilerOptions": {
          "target": "ES2022",
          "module": "commonjs",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "sourceMap": true,
          "declaration": true,
          "outDir": "./out",
          "types": ["node", "vitest/globals"],
	  "composite": true,
          "lib": [
            "ES2022"
        ]
    },
    "typeRoots": ["node_modules/@types" ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
